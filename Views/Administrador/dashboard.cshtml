@model project_RoleTopMVC.ViewModels.DashboardViewModel
<main>
     <h2>Dashboard</h2>

     <section id="status-agendamentos">
          <h3>Status dos Eventos</h3>
          <div id="painel">
               <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.PedidosAprovados</p>
               </div>
               <div class="box-status-pedidos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.PedidosPendentes</p>
               </div>
               <div class="box-status-pedidos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.PedidosReprovados</p>
               </div>
          </div>
     </section>

     <section id="lista-solicitacoes">
          <h3>Lista de Solicitações</h3>
          <table>
               <thead>
                    <tr>
                         <th>Nome</th>
                         <th>Tema do Evento</th>
                         <th>Dia e Hora</th>
                         <th>Tipo do Evento</th>
                         <th>Número de Pessoas</th>
                         <th>Serviços</th>
                         <th>Descrição</th>
                         <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    
               </thead>
               <tfoot>
                    <tr>
                         <td colspan="7">
                              <p>Pedidos atualizados em 12/12/2012 às @DateTime.Now</p>
                         </td>
                    </tr>
               </tfoot>

               <tbody>
                         @foreach (var agendamento in Model.Agendamentos)
                         {
                              <tr>
                                   <td>@agendamento.Evento.Cliente.Nome</td>
                                   <td>@agendamento.Evento.Tema</td>
                                   <td>@agendamento.Evento.DataDoAgendamento</td>
                                   <td>@agendamento.Evento.TipoDoEvento</td>
                                   <td>@agendamento.Evento.NumeroDePessoas</td>
                                   <td>@agendamento.Evento.Servicos</td>
                                   <td>@agendamento.Evento.Descricao</td>
                                   <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @agendamento.Evento.Id})'><i class="fas fa-check"></i></a></td>
                                   <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @agendamento.Evento.Id})'><i class="fas fa-times"></i></a></td>
                              </tr>
                         }
               </tbody>
          </table>
     </section>

</main>